<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        @*<title>@ViewBag.Title - My ASP.NET MVC Application</title>*@
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

    
     

    </head>
<body ng-app="crudModule">
    <header>
    <div class="content-wrapper">
        <div class="float-left">
            <p class="site-title">@Html.ActionLink("Access Data From AG", "User", "Home")</p>
        </div>
        <div class="float-right">
            <section id="login">
                @Html.Partial("_LoginPartial")
            </section>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Index", "Index", "Home")</li>
                    <li>@Html.ActionLink("User", "User", "Home")</li>
                    <li>@Html.ActionLink("Admin", "Admin", "Home")</li>

                    <li><a ui-sref="Index" ui-sref-active="active">Home</a></li>
                    <li><a ui-sref="Admin" ui-sref-active="active">About</a></li>
                    <li><a ui-sref="User" ui-sref-active="active">Contact</a></li>
                </ul>
            </nav>
        </div>
    </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
            </div>
        </div>
    </footer>

    @* @Scripts.Render("~/bundles/jquery")*@
  

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/angular.js"></script>
    @*<script src="~/Scripts/angular-route.js"></script>*@
    <script src="~/Scripts/angular-ui-router.js"></script>
    <script src="~/Scripts/MyScripts/Module.js"></script>
    <script src="~/Scripts/MyScripts/route.js"></script>
    <script src="~/Scripts/MyScripts/Service.js"></script>
    <script src="~/Scripts/MyScripts/Controller.js"></script>
</body>
</html>
